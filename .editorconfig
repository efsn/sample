[*]
end_of_line = lf
max_line_length = 160

[*.{kt, kts}]
insert_final_newline = false
indent_size = 4
indent_style = space
continuation_indent_size = 4

[*.java]
insert_final_newline = false
indent_style = space
indent_size = 4
continuation_indent_size = 8

[*.{yaml, yml}]
indent_style = space
indent_size = 2
continuation_indent_size = 2